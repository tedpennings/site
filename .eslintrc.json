{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/all",
    "plugin:react-hooks/recommended",
    "prettier"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "complexity": "error",
    "dot-notation": "error",
    "no-console": "error",
    "no-shadow": "error",
    "prefer-destructuring": "error",
    "prefer-template": "error",
    "sort-imports": "error",
    "sort-keys": "error",
    "prefer-object-spread": "error",

    "react/boolean-prop-naming": "error",
    "react/display-name": "error",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  },
  "overrides": [
    {
      "files": ["config/**", "scripts/**"],
      "rules": {
        "no-console": "off",
        "sort-keys": "off",
        "sort-imports": "off"
      }
    }
  ],
  "settings": {
    "react": { "version": "detect", "pragma": "React" },
    "linkComponents": [
      "Hyperlink",
      {
        "name": "Link",
        "linkAttribute": "to"
      },
      {
        "name": "ExternalLink",
        "linkAttribute": "href"
      }
    ]
  }
}
